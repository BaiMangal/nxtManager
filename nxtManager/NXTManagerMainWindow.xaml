<mui:ModernWindow x:Class="nxtManager.NXTManagerMainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  ContentSource="/Pages/Console.xaml"
                  Title="nxtManager" Height="300" Width="300"
                  Icon="Images/logo.ico" WindowState="Maximized"
                  >
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="NXT Manager (beta)" x:Name="MenuLinks" >
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Account and Transactions" Source="/Pages/AccountAndTransactions.xaml" />
                <mui:Link DisplayName="Aliases" Source="/Pages/Aliases.xaml" />
                <mui:Link DisplayName="Peers" Source="/Pages/Peers.xaml" />
                <mui:Link DisplayName="Blocks" Source="/Pages/Blocks.xaml" />
                <!--<mui:Link DisplayName="System State" Source="/Pages/State.xaml" />-->
                <mui:Link x:Name="consoleLink" DisplayName="Console" Source="/Pages/Console.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>